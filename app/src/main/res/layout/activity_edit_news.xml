<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewsDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelEditCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/editCategory"/>
        <EditText
            android:id="@+id/editCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/stdMargin"
            android:layout_below="@id/labelEditCategory"
            android:lines="1"
            android:minLines="1"
            android:maxLines="2"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/labelEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editCategory"
            android:text="@string/editCategory"/>

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/stdMargin"
            android:lines="3"
            android:minLines="3"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:layout_below="@id/labelEditTitle"/>

        <TextView
            android:id="@+id/labelEditPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTitle"
            android:text="@string/editCategory"/>

        <EditText
            android:id="@+id/editPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/stdMargin"
            android:lines="5"
            android:minLines="5"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:layout_below="@id/labelEditPreview" />

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editPreview"
            android:layout_centerHorizontal="true"
            android:text="@string/update"/>

    </RelativeLayout>

</ScrollView>